@model IEnumerable<LMS_model.Book>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />

<div id="table">
    @using (Ajax.BeginForm("Search", "BOOK", new AjaxOptions { UpdateTargetId = "Table" }))
    {
        <div class="form-group">
            <input type="text" name="SearchInput" value="" />
            <input type="submit" name="submit" value="Search" class="btn btn-primary" />
        </div>
    }
</div>


<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SBIN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfCopied)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.describtion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SBIN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfCopied)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.describtion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
                @Html.ActionLink("Details", "Details", new { id=item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.id })
            </td>
        </tr>
    }

</table>
